<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PrepaidVodafone"
    tools:showIn="@layout/activity_prepaid_vodafone">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Recharge"
        android:id="@+id/txt_pre_V"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:textSize="20dp"
        android:inputType="number"
        android:id="@+id/ed_pre_V"
        android:layout_marginTop="10dp"
        android:textColor="#391ba9"
        android:backgroundTint="@color/colorAccent"
        android:layout_below="@+id/txt_pre_V"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan"
        android:id="@+id/txt_preplan_V"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#391ba9"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/ed_pre_V"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/bt_pre_V"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_preplan_V"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Proceed to pay"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:id="@+id/img_pre_V"
        android:layout_above="@+id/bt_pre_V"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_date_range_black_24dp"
        android:layout_toRightOf="@+id/txt_pre_V"
        android:layout_toLeftOf="@+id/txt_preplan_V"
        android:layout_toStartOf="@+id/txt_preplan_V"
        android:layout_alignTop="@+id/ed_pre_V" />
</RelativeLayout>
